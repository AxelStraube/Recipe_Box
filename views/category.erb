<h1><%= @category.name %></h1>

<% if @recipes.any? %>
  <% @recipes.each do |recipe| %>
  <ul>
    <li><a href="/recipes/<%= recipe.id() %>"><%= recipe.name %></a></li>
  </ul>
  <% end %>
<% else %>
  <p>You haven't added any recipes for this category yet!</p>
<% end %>


<form action="/recipes" method="post">
  <input id="category_id" name="category_id" type="hidden" value=<%= @category.id() %> >
  <label for="name">Enter Recipe Name:</label>
  <input id="name" name="name" type="text">


  <div class="form-group">
    <textarea placeholder = "Recipe Instructions" name="instructions" id="instructions"  class="instructions form-control"></textarea>
  </div>

  <button type="submit">Add Recipe</button>
</form>



